<header class="header">
    <h1>Find a bathroom</h1>
</header>
<main class="container">
    <div class="row resultsDiv">
            <div class="searchDiv">
                <p>Search by zip code</p>
                <input type="text" class="form-control text-center" id="zipInput" placeholder="12345" />
                <br />
                <button type="button" class="btn btn-primary" id="refineBtn">
                    <img src="https://img.icons8.com/ultraviolet/25/000000/toilet-paper.png" />
                    Refine
                </button>
            </div>
        <div class="">
            {{#if reviewData}}
            <h3 class="text-center">Results</h3>
            {{/if}}
            {{#each reviewData}}
            <div class="row resultCard mb-2">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{locationName}}</h5>
                            <div class="card-subtitle mb-2 text-muted">{{address}} {{city}}, {{state}} {{zipCode}}</div>
                            <p class="card-text">{{review}}</p>
                        </div>
                    </div>
                </div>
                {{!-- Because of the way we set up our database, we needed to use 
                if statements to check each option for 'true' --}}
                <div class="col-md-6 bathroomOptions">
                    <ul class="list-group ml-3 card-body">
                        {{#if changingStation}}
                        <li>Changing Station</li>
                        {{/if}}
                        {{#if feminineProducts}}
                        <li>Feminine Products</li>
                        {{/if}}
                        {{#if genderNeutral}}
                        <li>Feminine Products</li>
                        {{/if}}
                        {{#if genderNeutral}}
                        <li>Feminine Products</li>
                        {{/if}}
                        {{#if genderNeutral}}
                        <li>Feminine Products</li>
                        {{/if}}
                        {{#if genderNeutral}}
                        <li>Gender Neutral</li>
                        {{/if}}
                        {{#if toiletPaper}}
                        <li>Toliet Paper</li>
                        {{/if}}
                        {{#if multipleStalls}}
                        <li>Multiple Stalls</li>
                        {{/if}}
                        {{#if airDryer}}
                        <li>Air Dryer</li>
                        {{/if}}
                        {{#if fancy}}
                        <li>Fancy</li>
                        {{/if}}
                        {{#if familyFriendly}}
                        <li>Family Friendly</li>
                        {{/if}}
                        {{#if motionSensors}}
                        <li>Motion Sensors</li>
                        {{/if}}
                        {{#if handTowels}}
                        <li>Hand Towels</li>
                        {{/if}}
                        {{#if handSoap}}
                        <li>Hand Soap</li>
                        {{/if}}
                        {{#if clean}}
                        <li>Clean</li>
                        {{/if}}
                        {{#if keyRequired}}
                        <li>Key Required</li>
                        {{/if}}
                        {{#if payingCustomer}}
                        <li>Paying Customers Only</li>
                        {{/if}}
                    </ul>
                </div>
            </div>
            {{/each}}
    </div>
    </div>
</main>